{
  "name": "mailme-backend",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --target=bun --outdir dist",
    "start": "bun dist/index.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "wl": "cd cloudflare && wrangler login",
    "wd": "cd cloudflare && wrangler deploy",
    "wt": "cd cloudflare && wrangler tail"
  },
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "mailparser": "^3.9.0",
    "smtp-server": "^3.16.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251111.0",
    "@types/bun": "latest",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/mailparser": "^3.4.6",
    "@types/smtp-server": "^3.5.12",
    "prisma": "^6.19.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
